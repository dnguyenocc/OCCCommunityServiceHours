<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.dnguyen1214.occcommunityservicehours.HostEventActivity"
    android:orientation="vertical"
    android:weightSum="7">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="@string/host_event_list_title"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:id="@+id/textView8" android:layout_weight="1"
        android:textSize="30sp" android:gravity="center"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/background_light"/>
    <ListView
        android:id="@+id/hostEventListView"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp">
    </ListView>

    <Button
        android:text="@string/add_event"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/addEventButton"
        android:layout_height="0dp" />

</LinearLayout>
